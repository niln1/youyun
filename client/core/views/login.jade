div#content.login-view
	div.login-form-container
		div.logo.col-lg-offset-4.col-lg-4.col-md-offset-3.col-md-6.col-sm-offset-2.col-sm-8
			div.login-logo-container
				div.school-logo-background
					img.school-logo(src='/core/img/school-logo-pinghe-login.png')
		form.login-form.col-lg-offset-4.col-lg-4.col-md-offset-3.col-md-6.col-sm-offset-2.col-sm-8
			div.form-group.login-form-group
				div.form-field-group
					input.username.form-control.input-lg(placeholder='用户名', type='text', name='username', ng-model='username')
					span.login-field-icon.glyphicon.glyphicon-user
				div.form-field-group
					input.password.form-control.input-lg(placeholder='密码', type='password', name='password', ng-model='password')
					span.login-field-icon.glyphicon.glyphicon-lock
				button.submit.btn.btn-block.btn-lg.btn-success(ng-click="ctrl.doLogin()") 登陆
			div.login-form-group-footer
				p
					a(href="/#/forget-password") 忘记了密码？
				p
					| 下载&nbsp;
					a(href="/#/download-iPhone") iPhone
					| &nbsp;或&nbsp;
					a(href="/#/download-android") 安卓
					| &nbsp;的App来更方便地管理优云
	footer.login-view-footer
		p
			a(href="/") YouYun © 2014 &nbsp;
				img.yy-logo(src='/core/img/favicon.png')
				| &nbsp;&nbsp;优云教育有限公司