div.pageboard-shadow.reminder-container
	div.content-header
		div.header-inner
			h2.text-left 提醒信息
			button.reminder-add-button(class="btn btn-default" data-toggle="modal" data-target="#addReminderModal") +
	div.content-divider
	div#reminder-items-region
	//Model
	div(class="modal fade" id="addReminderModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true")
		div(class="modal-dialog")
			div(class="modal-content")
				div(class="modal-header")
					button(type="button" class="close" data-dismiss="modal" aria-hidden="true") &times;
					h4(class="modal-title" id="myModalLabel") 新的提醒
				div(class="modal-body") ...
				div(class="modal-footer")
					button(type="button" class="btn btn-default" data-dismiss="modal") 关闭
					button#saveNewReminder(type="button" class="btn btn-primary") 保存