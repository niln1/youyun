// template for primary tabs content
div.tab-view.cyan-split-view(data-template='cyan-tab-panel-template')
    div.tabHeader(data-element="header")
    div.tabContent.k-header(data-element="content")

// individual tab header
div.tabHeaderButton.k-header(data-template='tab-header-button-template')
div.tabContentPlaceHolder(data-template='tab-content-place-holder-template')


iframe.cy-iframe(data-template="cy-iframe-template", seamless)

// grunt error / message display templates
div.gruntContainer(data-template="grunt-container-template")
div.grunt(data-template="grunt-template")
    div.gruntCount(data-element="grunt-count")
    div.gruntText(data-element="grunt-text")
    div.gruntClose(data-element="grunt-close")

// for simple lists, i.e. in a debug console
div(data-template="simple-console-template")
    p
        b(data-element="results")
    div.simple-list
    style(scoped).
        .simple-list {
            width: 100%;
            max-height: 400px;
            overflow-x: hidden;
            overflow-y: auto;
            border: 1px solid lightgray;
            margin-bottom: 8px;
        }

div(data-template="browser-pass")
    div.browser-pass
    style(scoped).
        .browser-pass {
            width: -webkit-calc(100% - 10px);
            width: -moz-calc(100% - 10px);
            width: calc(100% - 10px);
            border: 1px solid green;
            background-color: rgba(0, 255, 0, 0.3);
            color: black;
            margin:2px;
            text-indent:0.5em;
        }

div(data-template="browser-fail")
    div.browser-fail
    style(scoped).
        .browser-fail {
            width: -webkit-calc(100% - 10px);
            width: -moz-calc(100% - 10px);
            width: calc(100% - 10px);
            border: 1px solid red;
            background-color: rgba(255, 0, 0, 0.3);
            color: black;
            margin:2px;
            text-indent:0.5em;
        }

// form test
