        span Copy

    button(data-item="acknowledge").cyan-alarmgrid-ack-button.cyan-link(disabled="disabled")
        span.cyan-icon.cyan-icon-ack
        span Acknowledge
    button(data-item="viewer", disabled="disabled").cyan-alarmgrid-viewer-button.cyan-link
