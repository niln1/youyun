block html-templates

// template for timeline
div.alarm-timeline(data-template="timeline")

    div.alarm-timeline-content(data-element="content")
        div.alarm-future.hidden(data-element="future")
        div.alarm-zoom-buttons.hidden(data-element="zoom-holder")
            div.alarm-zoom-button-plus(data-element="plus") +
            div.alarm-zoom-button-minus(data-element="minus") -
        div.alarm-timeline-emptylabel(data-element="empty-label") No Alarms
        div.alarm-timeline-mouselabel.no-select.hidden(data-element="mouselabel")

    div.alarm-timeline-time-scale.no-select-no-mouse.hidden(data-element="time-scale")
    div.alarm-timelime-slider.hidden(data-element="slider")
        div.alarm-start-time.no-select
            div.alarm-start-inner(data-element="start-time")
        div.alarm-scroller(data-element="scroller")
            div.alarm-scroll-thumb(data-element="thumb")
        div.alarm-end-time.no-select
            div.alarm-end-inner(data-element="end-time")

div.master-page-view-label

div.master-page-alarm-button

// template for the filter clear button used to input boxes

