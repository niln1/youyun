    input.cyan-time-picker(data-element="start")
    span End
    input.cyan-time-picker(data-element="end")


div(data-template='cyan-split-view-container-template').no-overflow.cyan-main-root-view

div(data-template='cyan-split-view-template').cyan-split-view.no-overflow
