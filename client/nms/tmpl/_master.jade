                    .form-group.section.group
                        .col.span_2_of_12.green
                            label.control-label(for='selector1') Combobox
                        .col.span_10_of_12.green
                            input#selector1(placeholder="Make a selection")

                    .form-group.section.group
                        .col.span_2_of_12.green
