                                    input#inputEmail3.form-control(type='email', placeholder='Email')

                        .form-group
                            .section.group
                                .col.span_2_of_12.green
                                    label.control-label(for='inputPassword3') Password
                                .col.span_10_of_12.green
                                    input#inputPassword3.form-control(type='password', placeholder='Password')

                        .form-group
                            .section.group
                                .col.span_2_of_12.green
                                .col.span_10_of_12.green
                                    .checkbox
                                        label.control-label Remember me
                                            input(type='checkbox')

                        .form-group
                            .section.group
                                .col.span_2_of_12.green
                                .col.span_10_of_12.green
                                    button.k-button(type="submit") Sign In
