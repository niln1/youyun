    div.cyan-date-time-picker
        div(data-element="date")
        div
            input(data-element="time")
    style(scoped).
        .cyan-date-time-picker {
            margin-bottom: 5px;
        }
        .k-timepicker {
            width: 100%;
        }

div(data-template="cyan-alarm-ranges-template")
    .range-picker
        .range-calendar(data-element="start-cal")
        .range-time-picker
            p Time - 24hr Format:
            input.range-time.k-block(data-element="start-hour", placeholder="Hour", maxlength="2")
            .range-colon :
            input.range-time.k-block(data-element="start-minutes", placeholder="Minutes", maxlength="2")
            .range-colon :
            input.range-time.k-block(data-element="start-seconds", placeholder="Seconds", maxlength="2")

    .range-picker
        .range-calendar(data-element="end-cal")
        .range-time-picker
            p Time - 24hr Format:
            input.range-time.k-block(data-element="end-hour", placeholder="Hour", maxlength="2")
            .range-colon :
            input.range-time.k-block(data-element="end-minutes", placeholder="Minutes", maxlength="2")
            .range-colon :
            input.range-time.k-block(data-element="end-seconds", placeholder="Seconds", maxlength="2")

    hr

        
