extends _master

block body-content
    header.labelheader
        p.school-logo-container.unselectable
            a.school-logo(href="/")
                img(src='/core/img/school-logo-pinghe-login-white.png')
                | &nbsp;优云
        nav.main.unselectable
            ul
                li.home
                    a(href="/") 主页
                li.pickupreport-link
                    a(href="/pickupreport") 接车报告
                li.usermanage-link
                    a(href="/usermanage") 管理
        nav.user.unselectable
            div.user-icon
                i(style="background-image: url('#{ user.userImage }'), url('/static/img/default_image/default-user.png');")
            ul
                li
                    a(href="/account") 我的账户
                li
                    a(href="/logout") 登出
    div#content
        div#header-background-region.fixed
            div.closed
                header#header-background.closed
                    hgroup(style="opacity: 1;")
                        p.user-photo
                            i.photo
                                i
                            i.saving 保存中...
        block main-content

        div#error-modal.modal.fade
            div.modal-dialog.modal-sm
                div.modal-content
                    div.modal-header
                        button(type="button" class="close" data-dismiss="modal" aria-hidden="true")&times;
                        h4.modal-title 出错了
                    div.content-divider
                    div.modal-body
                        div(style="padding: 0.5em") 连接出现问题，我们会尽快解决
                    div.modal-footer
                        button(type="button" class="btn btn-default" data-dismiss="modal") 知道了

