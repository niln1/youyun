extends app-header
block head-extra
    script.
        var current_user = !{JSON.stringify(user)};
block main-content
    div#main-region.container-fluid
        div.page-board.pageboard-shadow(style="background:white;")
            div.col-md-2
                ul.nav.nav-pills.nav-stacked(role="tablist")
                    li.active
                        a(href="#studentinfo" role="tab" data-toggle="tab") Student Info
                    li
                        a(href="#studentpickupdetail" role="tab" data-toggle="tab") Pickup Detail
            div.col-md-10.tab-content
                div#studentinfo.tab-pane.active
                    div.content-header
                        div.header-inner
                            h2.text-left Student Info
                    div.content-divider
                    div(style="padding: 1px")#student-table-container
                div#studentpickupdetail.tab-pane
                    div.content-header
                        div.header-inner
                            h2.text-left Pickup Detail
                    div.content-divider
                    div(style="padding: 1px")#pickupdetail-table-container
    script#pickup-popup-editor(type="text/x-kendo-template")
        div.k-edit-label
            label(for="studentName") Student Name
        div(data-container-for="studentName" class="k-edit-field")
            input(type="text" class="k-input k-textbox" name="studentName" data-bind="value:studentName" disabled="")
        div.k-edit-label
            label(for="pickedBy") Picked By
        div(data-container-for="pickedBy" class="k-edit-field")
            input(type="text" class="k-input k-textbox" name="pickedBy" data-bind="value:pickedBy")
        div(class="k-edit-label")
            label(for="mondayPickupTime") Mon
        div(data-container-for="mondayPickupTime" class="k-edit-field")
            input(type="text" class="k-input k-textbox timepicker" name="mondayPickupTime" data-bind="value:mondayPickupTime")
        div(class="k-edit-label")
            label(for="tuesdayPickupTime") Tue
        div(data-container-for="tuesdayPickupTime" class="k-edit-field")
            input(type="text" class="k-input k-textbox timepicker" name="tuesdayPickupTime" data-bind="value:tuesdayPickupTime")
        div(class="k-edit-label")
            label(for="wednesdayPickupTime") Wed
        div(data-container-for="wednesdayPickupTime" class="k-edit-field")
            input(type="text" class="k-input k-textbox timepicker" name="wednesdayPickupTime" data-bind="value:wednesdayPickupTime")
        div(class="k-edit-label")
            label(for="thursdayPickupTime") Thu
        div(data-container-for="thursdayPickupTime" class="k-edit-field")
            input(type="text" class="k-input k-textbox timepicker" name="thursdayPickupTime" data-bind="value:thursdayPickupTime")
        div(class="k-edit-label")
            label(for="fridayPickupTime") Fri
        div(data-container-for="fridayPickupTime" class="k-edit-field")
            input(type="text" class="k-input k-textbox timepicker" name="fridayPickupTime" data-bind="value:fridayPickupTime")
        div(class="k-edit-label")
            label(for="saturdayPickupTime") Sat
        div(data-container-for="saturdayPickupTime" class="k-edit-field")
            input(type="text" class="k-input k-textbox timepicker" name="saturdayPickupTime" data-bind="value:saturdayPickupTime")
        div(class="k-edit-label")
            label(for="sundayPickupTime") Sun
        div(data-container-for="sundayPickupTime" class="k-edit-field")
            input(type="text" class="k-input k-textbox timepicker" name="sundayPickupTime" data-bind="value:sundayPickupTime")
    script(src='/core/staticjs/common.js')
    script(src='/core/staticjs/usermanage.js')